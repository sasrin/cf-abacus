#!/bin/bash

# Start all the Abacus services
CONF=default
if [ -n "$1" ]; then
  CONF=$1
fi

etc/apps/$CONF | awk '{
  if ($3 != "")
    printf "(sleep 1 && cd node_modules/%s && npm start -- -i %s&)\n", $1, $3;
  else
    printf "(sleep 1 && cd node_modules/%s && npm start &)\n", $1;
}' | bash -xe

