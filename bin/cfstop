#!/bin/bash

# Stop all the Abacus apps on Cloud Foundry
export CONF=default
if [ -n "$1" ]; then
  export CONF=$1
fi

for MODULE in $(node_modules/abacus-etc/apprc node_modules/abacus-etc/apps.rc $CONF apps); do
  APPNAME=$(node_modules/abacus-etc/appname $MODULE)
  APPS=$(echo $(node_modules/abacus-etc/apprc node_modules/$APPNAME/.apprc $CONF APPS) - 1 | bc)
  if [ "$APPS" == "0" ]; then
    cf stop $APPNAME &
  else
    for I in $(seq 0 $APPS); do
      cf stop $APPNAME-$I &
    done
  fi
done

wait

